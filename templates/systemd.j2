[Unit]
Description=Consul Agent
Wants=basic.target
After=basic.target network.target

[Service]
User=consul
Group=consul
ExecStart={{ consul_bin_path }}/consul agent -config-dir={{ consul_base_path }} -data-dir={{ consul_data_path }}
ExecReload={{ consul_bin_path }}/consul reload
KillSignal=SIGINT

[Install]
WantedBy=multi-user.target
